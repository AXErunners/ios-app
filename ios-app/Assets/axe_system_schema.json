{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://axe.org/schemas/sys",
  "pver": 1,
  "type": "object",
  "title": "AxeSystemSchema",
  "definitions": {
    "objectbase": {
      "type": "object",
      "properties": {
        "meta": {
          "type": "object",
          "properties": {
            "buid": {
              "type": "string"
            },
            "uname": {
              "type": "string"
            },
            "id": {
              "type": "string"
            },
            "block": {
              "type": "number"
            },
            "height": {
              "type": "number"
            }
          }
        }
      }
    },
    "sysobjectbase": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/objectbase"
        }
      ],
      "properties": {
        "pver": {
          "type": "number"
        },
        "meta": {
          "type": "object",
          "properties": {
            "uname": {
              "type": "number"
            },
            "hash": {
              "type": "string"
            },
            "height": {
              "type": "number"
            }
          }
        }
      },
      "required": [
        "pver"
      ]
    },
    "dapobjectbase": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/objectbase"
        }
      ],
      "properties": {
        "objtype": {
          "type": "string"
        },
        "idx": {
          "type": "number",
          "multipleOf": 1,
          "minimum": 0,
          "maximum": 999
        },
        "rev": {
          "type": "number",
          "multipleOf": 1,
          "minimum": 0
        },
        "act": {
          "type": "number",
          "multipleOf": 1,
          "minimum": 1,
          "maximum": 3
        },
        "rel": {
          "type": "array",
          "minItems": 1,
          "maxItems": 10,
          "items": [
            {
              "type": "string"
            },
            {
              "type": "number"
            }
          ],
          "uniqueItems": true,
          "additionalItems": false
        },
        "meta": {
          "type": "object",
          "properties": {
            "dapid": {
              "type": "string"
            },
            "pkid": {
              "type": "string"
            },
            "tsid": {
              "type": "string"
            }
          }
        }
      },
      "required": [
        "objtype",
        "idx",
        "rev",
        "act"
      ]
    },
    "dapcontractbase": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/objectbase"
        }
      ],
      "properties": {
        "upgradedapid": {
          "type": "string",
          "minLength": 64,
          "maxLength": 64
        },
        "dapname": {
          "type": "string",
          "minLength": 3,
          "maxLength": 24
        },
        "dapver": {
          "type": "number",
          "multipleOf": 1.0,
          "minimum": 1
        },
        "dapschema": {
          "type": "object"
        }
      },
      "required": [
        "dapname",
        "dapver",
        "dapschema"
      ],
      "additionalItems": false
    },
    "dapobjectkeyproperty": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        }
      }
    },
    "dapobjectrelation": {
      "type": "object",
      "properties": {
        "buid": {
          "type": "string"
        },
        "multiplicity": {
          "type": "string",
          "enum": [
            "red",
            "amber",
            "green"
          ]
        },
        "scope": {
          "type": "string",
          "enum": [
            "red",
            "amber",
            "green"
          ]
        }
      }
    },
    "dapmetaschema": {
      "$id": "http://axe.org/schemas/dapmeta",
      "title": "DAP Subschema meta-schema",
      "properties": {
        "default": {}
      }
    },
    "relation": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string"
        },
        "index": {
          "type": "integer",
          "minimum": 0
        },
        "type": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": [
        "userId",
        "type"
      ],
      "additionalProperties": false
    }
  },
  "properties": {
    "subtx": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/sysobjectbase"
        }
      ],
      "properties": {
        "pver": {},
        "action": {
          "type": "number"
        },
        "uname": {
          "type": "string"
        },
        "pubkey": {
          "type": "string"
        },
        "mroot": {
          "type": "string"
        }
      },
      "required": [
        "action",
        "uname",
        "pubkey"
      ],
      "additionalProperties": false
    },
    "blockchainuser": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/sysobjectbase"
        }
      ],
      "properties": {
        "pver": {},
        "uname": {
          "type": "string"
        },
        "buid": {
          "type": "string"
        },
        "pubkey": {
          "type": "string"
        },
        "credits": {
          "type": "number"
        },
        "subtx": {
          "type": "array",
          "uniqueItems": true,
          "minItems": 1,
          "items": {
            "oneOf": [
              {
                "type": "object",
                "properties": {
                  "subtx": {
                    "$ref": "#/properties/subtx"
                  }
                },
                "additionalProperties": false
              }
            ]
          }
        }
      },
      "required": [
        "uname",
        "buid",
        "pubkey",
        "credits"
      ],
      "additionalProperties": false
    },
    "stheader": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/sysobjectbase"
        }
      ],
      "properties": {
        "pver": {},
        "nver": {
          "type": "number",
          "multipleOf": 1.0,
          "minimum": 1
        },
        "feeperbyte": {
          "type": "number",
          "multipleOf": 0.00000001,
          "minimum": 0
        },
        "buid": {
          "type": "string",
          "minLength": 64,
          "maxLength": 64
        },
        "prevstid": {
          "type": "string",
          "minLength": 0 ,
          "maxLength": 64
        },
        "packetid": {
          "type": "string",
          "minLength": 64,
          "maxLength": 64
        },
        "packetsize": {
          "type": "number",
          "multipleOf": 1.0,
          "minimum": 0
        },
        "stsig": {
          "type": "string"
        }
      },
      "required": [
        "nver",
        "feeperbyte",
        "buid",
        "prevstid",
        "packetid",
        "packetsize",
        "stsig"
      ],
      "additionalProperties": false
    },
    "stpacket": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/sysobjectbase"
        }
      ],
      "oneOf": [
        {
          "properties": {
            "dapcontract": {
              "type": "object",
              "allOf": [
                {
                  "$ref": "#/definitions/dapcontractbase"
                }
              ],
              "additionalItems": false
            }
          },
          "required": [
            "dapcontract"
          ]
        },
        {
          "properties": {
            "dapid": {
              "type": "string",
              "minLength": 64,
              "maxLength": 64
            },
            "dapobjectshash": {
              "type": "string"
            },
            "dapobjects": {
              "type": "array",
              "uniqueItems": true,
              "minItems": 1,
              "items": {
                "oneOf": [
                  {
                    "type": "object",
                    "patternProperties": {
                      "^.*$": {
                        "allOf": [
                          {
                            "$ref": "#/definitions/dapobjectbase"
                          }
                        ]
                      }
                    },
                    "additionalProperties": false
                  }
                ]
              }
            }
          },
          "required": [
            "dapobjectshash",
            "dapobjects",
            "dapid"
          ]
        }
      ],
      "properties": {
        "pver": {},
        "dapid": {},
        "dapobjectshash": {},
        "dapobjects": {},
        "dapcontract": {}
      },
      "additionalProperties": false
    },
    "dapcontract": {
      "allOf": [
        {
          "$ref": "#/definitions/dapcontractbase"
        }
      ]
    }
  },
  "oneOf": [
    {
      "required": [
        "subtx"
      ]
    },
    {
      "required": [
        "blockchainuser"
      ]
    },
    {
      "required": [
        "stheader"
      ]
    },
    {
      "required": [
        "stpacket"
      ]
    },
    {
      "required": [
        "dapcontract"
      ]
    }
  ],
  "additionalProperties": false
}